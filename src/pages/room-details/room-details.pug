include ../../components/head/head.pug
include ../../components/header/header.pug
include ../../components/footer/footer.pug
include ../../components/submit-btn/submit-btn.pug
include ../../components/feature-item/feature-item.pug
include ../../components/like-btn/like-btn.pug
include ../../components/review-item/review-item.pug
include ../../components/bullet-item/bullet-item.pug
include ../../components/pie-chart/pie-chart.pug
include ../../components/booking-form/booking-form.pug

doctype html
html(lang="en")
  +head('Room details')
  body 
    .wrapper 
      +header
      main.main
        .preview.main__preview
          img.preview__img.preview__img_grid-area_first(
            src=require("/assets/img/room-details/room-details-1.jpg"),
            alt="комната отеля"
          )
          img.preview__img.preview__img_grid-area_second(
            src=require("/assets/img/room-details/room-details-2.jpg"),
            alt="комната отеля"
          )
          img.preview__img.preview__img_grid-area_third(
            src=require("/assets/img/room-details/room-details-3.jpg"),
            alt="комната отеля"
          )
        .room.main__room
          .room__container
            .room__inner
              .room__content
                .room__about
                  .room__features
                    h2.room__features-title Сведения о номере
                    .room__features-items 
                      .room__features-item
                        +feature-item('Комфорт', 'Шумопоглощающие стены', 'insert_emoticon')
                      .room__features-item
                        +feature-item('Удобство', 'Окно в каждой из спален', 'location_city')
                      .room__features-item
                        +feature-item('Уют', 'Номер оснащён камином', 'whatshot')
                  .room__votes 
                    h2.room__votes-title Впечатления от номера
                    .room__votes-content 
                      .room__votes-chart
                        +pie-chart
                      ul.room__votes-list 
                        li.room__votes-item.room__votes-item_color_orange Великолепно
                        li.room__votes-item.room__votes-item_color_green Хорошо
                        li.room__votes-item.room__votes-item_color_purple Удовлетворительно
                        li.room__votes-item.room__votes-item_color_black Разочарован
                .room__reviews
                  .room__reviews-header 
                    h2.room__reviews-title Отзывы посетителей номера
                    .room__reviews-counts 2 отзыва
                  .room__reviews-list
                    .room__reviews-item 
                      +review-item({name: 'Мурад Сарафанов', online: '5 дней назад', avatarSrc: require('../../assets/img/user-img-1.jpg'), likeCount: 12, isLiked:true, text:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
                    .room__reviews-item 
                      +review-item({name: 'Патрисия Стёклышкова', online: 'Неделю назад', avatarSrc: require('../../assets/img/user-img-2.jpg'), likeCount: 2, isLiked:false, text:'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент'})
                .room__details
                  .room__rules 
                    h2.room__rules-title Правила
                    .room__rules-list 
                      +bullet-item('нельзя с питомцами')
                      +bullet-item('Без вечеринок и мероприятий')
                      +bullet-item('Время прибытия — после 13:00, а выезд до 12:00')

                  .room__cancel 
                    h2.room__cancel-title Отмена
                    p.room__cancel-text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
              .room__form
                +booking-form
      +footer
