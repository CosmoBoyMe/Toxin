include ../submit-button/submit-button.pug
include ../calendar/calendar.pug
include ../guest-dropdown/guest-dropdown.pug
include ../card-header-info/card-header-info.pug

mixin booking-form({ price = 9999, days = 4, discountServices = 2179, services = 0, extraServices = 300, totalAmount = 38081, selectedDate = [] } = {})
  form.booking-form.js-booking-form
    .booking-form__about
      +card-header-info({ isLarge: true })
    .booking-form__calendar
      +calendar({ type: 'multiple', selectedDate: selectedDate })
    .booking-form__dropdown
      +guest-dropdown({ values: [1,2] })
    .booking-form__services
        .booking-form__services-descriptions
          p.booking-form__services-text 
            span.booking-form__services-price.js-booking-form__services-price #{ price }
            | &nbsp;
            span.booking-form__services-symbol x
            | &nbsp;
            span.booking-form__services-days.js-booking-form__services-days #{ days }
            | &nbsp;
            span.booking-form__services-days-world.js-booking-form__services-days-word суток
            | &nbsp;
        span.booking-form__services-price.js-booking-form__services-price #{ price * days }
        .booking-form__services-descriptions
          p.booking-form__services-description-text 
            span.booking-form__services-name Сбор за услуги: скидка
            | &nbsp;
            span.booking-form__services-discount-price.js-booking-form__services-price #{ discountServices }
            | &nbsp;
          button.booking-form__services-info-button(type="button") i
        span.booking-form__services-price.js-booking-form__services-price #{ services }
        .booking-form__services-descriptions
          p.booking-form__services-text 
            span.booking-form__services-name Сбор за дополнительные услуги
          button.booking-form__services-info-button(type="button") i
        span.booking-form__services-price.js-booking-form__services-price #{ extraServices }

    .booking-form__result Итого
      span.booking-form__result-line
      span.booking-form__result-price.js-booking-form__services-price #{ totalAmount }
    +submit-button('забронировать')
