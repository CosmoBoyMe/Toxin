mixin range-slider({ title = 'Range Slider', text = '', start = [ 5000, 10000 ], step = 100, range = { min: 1000, max: 15500 } } = {})
  .range-slider.js-range-slider(data-start=start, data-step=step, data-range=range)
    .range-slider__info 
      h3.range-slider__title= title
      .range-slider__price.js-range-slider__price
    .range-slider__slider.js-range-slider__slider
    if (text)
    p.range-slider__note-text= text
