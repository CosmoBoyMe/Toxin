include ../checkboxItem/checkboxItem.pug

mixin expandableList(title, items)
  .expandable-list.js-expandable-list
    .expandable-list__header.js-expandable-list__header
      h3.expandable-list__title= title
      span.expandable-list__arrow.js-expandable-list__arrow expand_more
    .expandable-list__menu.js-expandable-list__menu
      each item in items 
        +checkboxItem(item)
