mixin amount-select({ title = '', value = '', min = 0, max = 10 } = {})
  .amount-select
    h3.amount-select__title= title
    .amount-select__controls
      button.amount-select__button.amount-select__button_sign_minus.js-amount-select__button_sign_minus(
        type="button"
      )
      input.amount-select__number.js-amount-select__number(
        type="number",
        min=min,
        max=max,
        value=value,
        readonly=""
      )
      button.amount-select__button.amount-select__button_sign_plus.js-amount-select__button_sign_plus(
        type="button"
      )
