include ../date-field/date-field.pug
include ../datepicker/datepicker.pug

mixin calendar({calendarId, datePickerId, type='', title='', secondTitle= ''})
  .calendar(id=calendarId)
    if (type==="multiple")
      .calendar__fields
        .calendar__field.js-calendar__field
          - const dateFieldTitleFirst = title ? title : "прибытие";
            +date-field(dateFieldTitleFirst)
        .calendar__field.js-calendar__field
          - const dateFieldTitleSecond = secondTitle ? secondTitle : "выезд";
          +date-field(dateFieldTitleSecond)
    else
      .calendar__field.js-calendar__field
        - const dateFieldTittleThird = title ? title : "даты пребывания в отеле";
        +date-field(dateFieldTittleThird, 'ДД-ММ - ДД-ММ')

    .calendar__date-picker.js-calendar__date-picker.js-calendar__date-picker_close
      +datepicker(datePickerId)
