include ../date-field/date-field.pug

mixin calendar({ type = '', title = '', secondTitle = '', selectedDate = [] } = {})
  .calendar.js-calendar(data-type=type)
    if (type === "multiple")
      .calendar__fields
        .calendar__field.js-calendar__field
          - const dateFieldTitleFirst = title || "прибытие";
            +date-field({ title: dateFieldTitleFirst , selectedDate: selectedDate[0] })
        .calendar__field.js-calendar__field
          - const dateFieldTitleSecond = secondTitle || "выезд";
          +date-field({ title: dateFieldTitleSecond , selectedDate: selectedDate[1] })
    if (type === 'single')
      .calendar__field.js-calendar__field
        - const dateFieldTittleThird = title || "даты пребывания в отеле";
        +date-field({ title: dateFieldTittleThird, placeholder: 'ДД-ММ - ДД-ММ', selectedDate: selectedDate[0] })
    .calendar__date-picker.js-calendar__date-picker(
      class=type && "calendar__date-picker_closed calendar__date-picker_shift_top"
    )
