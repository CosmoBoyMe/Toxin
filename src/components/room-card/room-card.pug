include ../rate/rate.pug
include ../card-header-info/card-header-info.pug

mixin room-card({ roomNumber = 1, price = 9999, isLux = false, reviewsCount = 10, imgsSrc = '', rateNumber = 5 } = {})
  .room-card.js-room-card
    .room-card__slider.swiper
      .room-card__slider-wrapper.swiper-wrapper
        each imgSrc in imgsSrc 
          .room-card__slide.swiper-slide
            .room-card__img-wrapper
              img.room-card__img(src=imgSrc, alt="комната отеля")
      .room-card__pagination.js-room-card__pagination
      button.room-card__button.room-card__button_type_prev.js-room-card__button_type_prev(
        type="button"
      )
        span.room-card__button-icon expand_more
      button.room-card__button.room-card__button_rotated.room-card__button_type_next.js-room-card__button_type_next(
        type="button"
      )
        span.room-card__button-icon expand_more
    .room-card__description
      a.room-card__description-link(href="/mock-address/change-me")
        .room-card__description-header
          +card-header-info({ isLux, price, roomNumber })
        .room-card__description-footer
          .rating.js-rating
            +rate(rateNumber)
          .room-card__description-footer-reviews-text
            span.room-card__description-footer-reviews-count= reviewsCount
            |
            | Отзывов
